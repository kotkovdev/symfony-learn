{% extends 'base.html.twig' %}

{% block title %}Hello ConferenceController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ conference.city }} <small>{{ conference.year }}</small></h1>
        {% if comments.collection|length > 0 %}
            {% for comment in comments.collection %}
                <p>
                    <strong>{{ comment.author }}</strong><br>
                    {{ comment.text }}
                </p>
            {% endfor %}
            {% if comments.previous >= 0 %}
                <a href="{{ path('conference', { id:conference.id, offset:comments.previous }) }}">Prev</a>
            {% endif %}
            {% if comments.next < comments.collection|length %}
                <a href="{{ path('conference', { id:conference.id, offset:comments.next }) }}">Next</a>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
